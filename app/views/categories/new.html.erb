<h1 align="center">Create new category</h1>
<%= render 'shared/errors', obj: @category %>

<%= form_for(@category, :html => {class: "form-horizontal", role: "form"}) do |form| %>
    <div class="form-group">
      <div class="control-label col-sm-3">
        <%= form.label :name %>
      </div>
      <div class="col-sm-6">
        <%= form.text_field :name, class: "form-control", placeholder: "Category name", autofocus: true %>
      </div>
    </div>
    <div class="form-group">
    <div class="col-sm-offset-5 col-sm-10">
        <%= form.submit class: 'btn btn-primary btn-lg' %>
      </div>
    </div> 
    <% end %>